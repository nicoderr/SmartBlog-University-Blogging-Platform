# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Supabase Database Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here

# JWT Authentication Secret (change this to a random string)
JWT_SECRET=your-super-secret-key-change-this-in-production

# Server Configuration
PORT=5000
NODE_ENV=development

# Elasticsearch Configuration
# For local development: http://localhost:9200
# For Elastic Cloud: https://xxxxx.elastic.cloud:9243
ELASTICSEARCH_URL=http://localhost:9200

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Optional: External API Keys
# OPENAI_API_KEY=your-openai-key-here
# SERP_API_KEY=your-serp-key-here
# OPENWEATHER_API_KEY=your-openweather-key-here
# GOOGLE_GEOCODING_API_KEY=your-google-key-here
